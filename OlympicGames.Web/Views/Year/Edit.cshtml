@model OlympicGames.Infrastructure.ViewModels.YearViewModel

@{
    ViewData["Title"] = "Edit";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Edit Year</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="YearNumber" class="form-label"></label>
                    <input asp-for="YearNumber" class="form-control" placeholder="Enter Year" />
                    <span asp-validation-for="YearNumber" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-4 col-md-6">
        <div class="card">
            <div class="card-header">
                <div class="icon-box">
                    <i class="bi bi-person-circle"></i>
                </div>
                Athlete Overview
            </div>
            <div class="card-body">
                <p>Quick overview of athlete statistics and performance.</p>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="card">
            <div class="card-header">
                <div class="icon-box">
                    <i class="bi bi-geo-alt"></i>
                </div>
                Area Coverage
            </div>
            <div class="card-body">
                <p>Detailed data about the areas participating in the Olympic Games.</p>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="card">
            <div class="card-header">
                <div class="icon-box">
                    <i class="bi bi-flag"></i>
                </div>
                Country Statistics
            </div>
            <div class="card-body">
                <p>Information about the countries and their Olympic performances.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

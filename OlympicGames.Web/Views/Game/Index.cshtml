@using OlympicGames.Model.Entity
@model PagedResult<OlympicGames.Infrastructure.ViewModels.GameViewModel>

@{
    ViewData["Title"] = "Games List";
}

<h1 class="text-center text-primary mb-4">Games List</h1>

<p class="text-center mb-4">
    <a asp-action="Create" class="btn btn-success btn-lg">Create New Game</a>
</p>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td class="text-center">
                    <a asp-action="Edit" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-action="Details" class="btn btn-info btn-sm">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row">
    <div class="col-lg-4 col-md-6">
        <div class="card">
            <div class="card-header">
                <div class="icon-box">
                    <i class="bi bi-person-circle"></i>
                </div>
                Athlete Overview
            </div>
            <div class="card-body">
                <p>Quick overview of athlete statistics and performance.</p>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="card">
            <div class="card-header">
                <div class="icon-box">
                    <i class="bi bi-geo-alt"></i>
                </div>
                Area Coverage
            </div>
            <div class="card-body">
                <p>Detailed data about the areas participating in the Olympic Games.</p>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="card">
            <div class="card-header">
                <div class="icon-box">
                    <i class="bi bi-flag"></i>
                </div>
                Country Statistics
            </div>
            <div class="card-body">
                <p>Information about the countries and their Olympic performances.</p>
            </div>
        </div>
    </div>
</div>

<div class="pagination-container text-center">
    <nav>
        <ul class="pagination justify-content-center">
            <cs-pager cs-paging-pagesize="@Model.PageSize"
                      cs-paging-pagenumber="@Model.PageNumber"
                      cs-paging-totalitems="@Model.TotalItems"
                      cs-pagenumber-param="pageNumber"
                      asp-controller="Game"
                      asp-action="Index"
                      cs-pager-li-current-class="page-item active"
                      cs-pager-li-other-class="page-item"
                      cs-pager-li-non-active-class="page-item disabled"
                      cs-pager-link-current-class="page-link"
                      cs-pager-link-other-class="page-link">
            </cs-pager>
        </ul>
    </nav>
</div>

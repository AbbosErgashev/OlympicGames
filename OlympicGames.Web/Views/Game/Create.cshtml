@model OlympicGames.Infrastructure.ViewModels.GameViewModel

@{
    ViewData["Title"] = "Create Game";
}

<h1 class="text-center text-primary mb-4">Create New Game</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Game Name Input -->
            <div class="form-group">
                <label asp-for="Name" class="control-label">Game Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter game name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center">
                <input type="submit" value="Create Game" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<div class="row">
    <div class="col-lg-4 col-md-6">
        <div class="card">
            <div class="card-header">
                <div class="icon-box">
                    <i class="bi bi-person-circle"></i>
                </div>
                Athlete Overview
            </div>
            <div class="card-body">
                <p>Quick overview of athlete statistics and performance.</p>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="card">
            <div class="card-header">
                <div class="icon-box">
                    <i class="bi bi-geo-alt"></i>
                </div>
                Area Coverage
            </div>
            <div class="card-body">
                <p>Detailed data about the areas participating in the Olympic Games.</p>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="card">
            <div class="card-header">
                <div class="icon-box">
                    <i class="bi bi-flag"></i>
                </div>
                Country Statistics
            </div>
            <div class="card-body">
                <p>Information about the countries and their Olympic performances.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

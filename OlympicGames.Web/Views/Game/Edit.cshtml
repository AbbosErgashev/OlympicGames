@model OlympicGames.Infrastructure.ViewModels.GameViewModel

@{
    ViewData["Title"] = "Edit Game";
}

<h1 class="text-center text-primary mb-4">Edit Game</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <h4 class="text-center">Edit Game Information</h4>
        <hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Game Name Field -->
            <div class="form-group">
                <label asp-for="Name" class="control-label">Game Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter Game Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Save Button -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
            </div>
        </form>

        <!-- Back to List Link -->
        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-4 col-md-6">
        <div class="card">
            <div class="card-header">
                <div class="icon-box">
                    <i class="bi bi-person-circle"></i>
                </div>
                Athlete Overview
            </div>
            <div class="card-body">
                <p>Quick overview of athlete statistics and performance.</p>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="card">
            <div class="card-header">
                <div class="icon-box">
                    <i class="bi bi-geo-alt"></i>
                </div>
                Area Coverage
            </div>
            <div class="card-body">
                <p>Detailed data about the areas participating in the Olympic Games.</p>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <div class="card">
            <div class="card-header">
                <div class="icon-box">
                    <i class="bi bi-flag"></i>
                </div>
                Country Statistics
            </div>
            <div class="card-body">
                <p>Information about the countries and their Olympic performances.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
